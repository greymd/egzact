#!/usr/bin/env egison
(load-file "../lib/egzact/utils.egi")
(load-file "../lib/egzact/filters.egi")

(define $main
  (match-lambda (list string)
                {
                  [<nil> usage]
                  [(args-check-opts-str $opts $arg) (execution opts arg)]
                  [_ usage]
                }))

(define $usage
  (do {
       (print "Usage: takelx [OPTIONS] string")
        option-usage
       (print "tldr:")
       (print "    $ echo QBY JCG FCM PAG TPX BQG UGB | takelx \"^P.*$\"")
       (print "    QBY JCG FCM PAG")
       }
       ))

(define $execution
  (lambda [$opts $arg]
    (print-each-line
      (initialize-args
        filter-takelx
        arg
        opts
        stdin
        ))))
