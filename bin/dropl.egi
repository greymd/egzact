#!/usr/bin/env egison
(load-file "../lib/egzact/utils.egi")
(load-file "../lib/egzact/filters.egi")

(define $main
  (match-lambda (list string)
                {
                  [(args-check-opts-num $opts $num)
                   (execution print-each-line filter-dropl opts (read num) stdin)]
                  [_ usage]
                }))

(define $usage
  (do {
       (print "Usage: dropl [OPTIONS] number")
        option-usage
       (print "tldr:")
       (print "    $ echo A B C D E | dropl 2")
       (print "    C D E")
       }
       ))
