#!/usr/bin/env egison
(load-file "../lib/egzact/utils.egi")
(load-file "../lib/egzact/filters.egi")

(define $main
  (match-lambda (list string)
                {
                  [<nil> usage]
                  [(args-check-opts-num $opts $num) (execution opts (read num))]
                  [_ usage]
                }))

(define $usage
  (do {
       (print "Usage: taker [OPTIONS] number")
        option-usage
       (print "tldr:")
       (print "    $ echo A B C D E | taker 2")
       (print "    D E")
       }
       ))

(define $execution
  (lambda [$opts $num]
    (print-each-line
      (initialize-args
        filter-taker
        num
        opts
        stdin
        ))))
